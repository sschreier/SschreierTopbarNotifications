{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_header_inner %}
    {% block base_header_inner_topbarnotifications %}
        {% if shopware.config.sschreierTopbarnotifications.config.showContentIn == "topbar" %}
            {% sw_include '@Storefront/storefront/topbarnotifications.html.twig' %}
        {% endif %}
    {% endblock %}

    {{ parent() }}
{% endblock %}

{% block base_footer %}
    {% block base_header_inner_footerbarnotifications %}
        {% if shopware.config.sschreierTopbarnotifications.config.showContentIn == "footerbar" %}
            {% sw_include '@Storefront/storefront/topbarnotifications.html.twig' %}
        {% endif %}
    {% endblock %}

    {{ parent() }}
{% endblock %}